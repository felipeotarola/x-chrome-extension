{
  "manifest_version": 3,
  "name": "AI Tweet Helper",
  "version": "1.0.0",
  "description": "AI-powered assistant to help you craft better tweets and replies",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "commands"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "generate_ai_help": {
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      },
      "description": "Generate AI help for tweets on the current page"
    }
  },
  "action": {
    "default_popup": "popup-clean.html",
    "default_title": "AI Tweet Helper"
  },
  "web_accessible_resources": [
    {
      "resources": ["next-static/*", "*.js", "*.css", "*.html"],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ]
}